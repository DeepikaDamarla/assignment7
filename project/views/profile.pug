doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title My Profile
    link(rel="stylesheet" href="/assets/css/profile.css")
    script.
      function openOverlay() {
          document.getElementById("editProfileOverlay").style.display = "flex";
      }

      function closeOverlay() {
          document.getElementById("editProfileOverlay").style.display = "none";
      }
  body
    header
      .header
        button.toggle-button(onclick="toggleSidebar()") â˜°
        div.title Live Sports Scoreboard
    .dashboard-container
      // Sidebar
      aside.sidebar.deActive.hidden#sidebar
        .profile
          img(src="https://c8.alamy.com/zooms/9/9d75d3fcb40441a39876692eed1f0c21/tc2fpe.jpg" alt="Profile Picture")
          h2 #{user.firstname}
        nav
          ul
           
            li: a(href="/user/home") Home
            li: a(href="/user/contact") Contact Us
            li: a(href="/user/about") About Us
            li: a(href="/user/service") Services            
            li: a(href="/user/profile") My Profile            
            li: a(href="/user/logout") Log out
        .fav-section
          h3 Favourite League
          ul
            li: a(href="#") Premier League
            li: a(href="#") I-League
            li: a(href="#") Laliga
          h3 Favourite Club
          ul
            li: a(href="#") TSG 1899 Hoffenheim 
    .main-content
      h1 My Profile
      .profile-info
        p First Name: #{user.firstname}
        p Last Name: #{user.lastname}
        p Username: #{user.username}
        p Email: #{user.email}
        p Phone: #{user.mobile}
        p Favourite Sport: #{user.favorite_sports}
      button.edit-btn(onclick="openOverlay()") Edit Profile

    .overlay(id="editProfileOverlay")
            .overlay-content.registration-section
                span.close-btn(onclick="closeOverlay()") &times;
                h2 Edit Profile
                form.registration-form(action="/user/edit-profile" method="POST")
                    input(type="text" name="firstname" placeholder="First Name" value=user.firstname required)
                    input(type="text" name="lastname" placeholder="Last Name" value=user.lastname required)
                    input(type="text" name="username" placeholder="Username" value=user.username required)
                    input(type="email" name="email" placeholder="Email" value=user.email required)                    
                    input(type="tel" name="phone" placeholder="Phone Number" value=user.mobile required)
                    input(type="text" name="favourite_sport" placeholder="Favourite Sport" value=user.favorite_sports required)
                    button(type="submit") Save Changes
    script(src="/assets/js/dashboard.js")

